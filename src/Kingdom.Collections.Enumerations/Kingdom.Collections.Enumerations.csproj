<?xml version="1.0" encoding="utf-8"?>
<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <Authors>Michael W. Powell</Authors>
    <Copyright>Copyright © 2016, 2018</Copyright>
    <RootNamespace>Kingdom.Collections</RootNamespace>
    <GenerateAssemblyInfo>false</GenerateAssemblyInfo>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <PackageProjectUrl>http://github.com/mwpowellhtx/Kingdom.Collections</PackageProjectUrl>
    <PackageRequireLicenseAcceptance>false</PackageRequireLicenseAcceptance>
  </PropertyGroup>

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <Version>1.2.0-dev014</Version>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
    <DocumentationFile>bin\Debug\netstandard2.0\Kingdom.Collections.Enumerations.xml</DocumentationFile>
    <BumpLabel>dev</BumpLabel>
    <BumpLabelDigits>3</BumpLabelDigits>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Release|AnyCPU'">
    <DocumentationFile>bin\Release\netstandard2.0\Kingdom.Collections.Enumerations.xml</DocumentationFile>
    <BumpRevision>True</BumpRevision>
    <BumpResetLabel>dev</BumpResetLabel>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="Kingdom.Collections.Enumerations.nuspec" />
  </ItemGroup>

  <ItemGroup>
    <Compile Include="..\tools\Common\CommonAssemblyInfo.cs" Link="Properties\CommonAssemblyInfo.cs" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="MSBump" Version="2.3.2" PrivateAssets="All" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Kingdom.Collections.ImmutableBitArray\Kingdom.Collections.ImmutableBitArray.csproj" />
  </ItemGroup>

  <ItemGroup>
    <Compile Update="Enumeration.Bitwise.cs">
      <DependentUpon>Enumeration.cs</DependentUpon>
    </Compile>
    <Compile Update="Enumeration.Derived.cs">
      <DependentUpon>Enumeration.cs</DependentUpon>
    </Compile>
    <Compile Update="Enumeration.Ordinal.cs">
      <DependentUpon>Enumeration.Derived.cs</DependentUpon>
    </Compile>
  </ItemGroup>

</Project>
